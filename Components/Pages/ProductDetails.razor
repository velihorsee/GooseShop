@page "/product/{Id:int}"
@rendermode InteractiveServer
@using GooseShop.Models
@using GooseShop.Data
@using GooseShop.Services
@using Microsoft.EntityFrameworkCore
@inject CartService CartService
@inject NavigationManager Nav
@inject AppDbContext DbContext

<div class="container mt-5 pb-5">
    @if (product == null)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-dark" style="width: 3rem; height: 3rem; border-width: 0.5rem;"></div>
            <p class="fw-black mt-3">ШУКАЄМО ГУСАКА...</p>
        </div>
    }
    else
    {
        @* ХЛІБНІ КРИХТИ *@
        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/" class="z-link-simple">КАТАЛОГ</a></li>
                <li class="breadcrumb-item active fw-bold text-uppercase">@product.Name</li>
            </ol>
        </nav>

        @* ... твій початок файлу ... *@

        <div class="row g-5">
            @* ЛІВА ЧАСТИНА: ВІЗУАЛ *@
            <div class="col-lg-6">
                <div class="z-product-viewport shadow-hard">
                    <div class="z-glitch-wrapper">
                        <img src="/@product.ImageUrl" class="z-main-img" alt="@product.Name" />
                        <div class="z-img-overlay"></div>
                    </div>
                    @if (hasConstructor)
                    {
                        <div class="z-badge-3d shadow-pixel">CUSTOM 3D ⚡</div>
                    }
                </div>
            </div>

            @* ПРАВА ЧАСТИНА: ІНФОРМАЦІЯ ТА КОНФІГУРАТОР *@
            <div class="col-lg-6">
                <div class="ps-lg-4">
                    <h1 class="fw-black display-4 text-uppercase mb-1">@product.Name</h1>

                    @* ЦІНА: Тепер пульсує і завжди актуальна з БД *@
                    <div class="z-price-tag shadow-pixel mb-4">@CurrentPrice.ToString("N0") ГРН</div>

                    <p class="lead fw-bold text-muted mb-4 border-start border-4 border-dark ps-3">
                        @product.Description
                    </p>

                    @* БЛОК ХАРАКТЕРИСТИК (ДИНАМІЧНИЙ) *@
                    <div class="z-specs-box shadow-pixel p-4 mb-4">
                        <div class="mb-4">
                            <label class="z-label-spec">ОБ'ЄМ ЧАШКИ:</label>
                            <div class="d-flex gap-2 mt-2">
                                @* Виводимо унікальні розміри, які реально є в базі для цього товару *@
                                @foreach (var vol in product.Variants.Select(v => v.Size).Distinct())
                                {
                                    <button class="z-spec-btn @(selectedVolume == vol ? "active" : "")"
                                            @onclick='() => SelectVolume(vol)'>
                                        @vol МЛ
                                    </button>
                                }
                            </div>
                        </div>

                        <div class="mb-2">
                            <label class="z-label-spec">КОЛІР ОСНОВИ:</label>
                            <div class="d-flex flex-wrap gap-2 mt-2">
                                @foreach (var color in AllAvailableColors)
                                {
                                    @* Перевірка: чи є цей колір доступним для обраного об'єму в таблиці ProductVariants *@
                                    bool isAvailable = product.Variants.Any(v => v.Size == selectedVolume && v.Color == color);

                                    <button class="z-color-dot shadow-pixel @(selectedColor == color ? "active" : "") @(!isAvailable ? "disabled-dot" : "")"
                                            style="background-color: @color"
                                            @onclick='() => { if (isAvailable) selectedColor = color; }'
                                            disabled="@(!isAvailable)"
                                            title="@(isAvailable? color : "Немає для цього об'єму")">
                                    </button>
                                }
                            </div>
                            @if (selectedVolume == "440")
                            {
                                <small class="z-danger-text fw-bold mt-2 d-block text-uppercase">
                                    * ВЕЛИКИЙ ГУСЬ ЛЮБИТЬ ТІЛЬКИ БІЛИЙ КОЛІР (ТАК У БАЗІ)
                                </small>
                            }
                        </div>
                    </div>

                    @* КУПІВЛЯ *@
                    <div class="z-buy-panel p-4 shadow-pixel mb-4 bg-white">
                        <div class="d-flex align-items-center justify-content-between mb-4 flex-wrap gap-3">
                            <div class="z-qty-selector shadow-pixel">
                                <button @onclick="() => ChangeQuantity(-1)">-</button>
                                <span class="fw-black">@quantity</span>
                                <button @onclick="() => ChangeQuantity(1)">+</button>
                            </div>
                            <div class="fw-black fs-3">РАЗОМ: @((CurrentPrice * quantity).ToString("N0")) ГРН</div>
                        </div>

                        <div class="d-grid gap-3">
                            <button class="z-btn z-btn-cyan shadow-pixel py-3 fs-5" @onclick="AddToCart">
                                В КОШИК 🛒
                            </button>
                            @if (hasConstructor)
                            {
                                <button class="z-btn z-btn-yellow shadow-pixel py-3 fs-5" @onclick="GoToConstructor">
                                    СТВОРИТИ СВІЙ ДИЗАЙН 🎨
                                </button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    [Parameter] public int Id { get; set; }
    private Product? product;
    private int quantity = 1;
    private bool hasConstructor = false;

    // Початкові значення
    private string selectedVolume = "330";
    private string selectedColor = "white";

    private readonly string[] AllAvailableColors = { "white", "black", "red", "cyan", "yellow" };

    // ШУКАЄМО ВАРІАНТ У БАЗІ:
    // Знаходимо конкретну варіацію, яка відповідає обраним фільтрам
    private ProductVariant? CurrentVariant => product?.Variants?
        .FirstOrDefault(v => v.Size == selectedVolume && v.Color == selectedColor);

    // ЦІНА: беремо ціну з варіації. Якщо варіації немає (null) — показуємо базову ціну товару.
    private decimal CurrentPrice => CurrentVariant?.Price ?? (product?.BasePrice ?? 0);

    protected override async Task OnInitializedAsync()
    {
        // ОБОВ'ЯЗКОВО: додаємо .Include(p => p.Variants), щоб підтягнути ціни з бази
        product = await DbContext.Products
            .Include(p => p.Category)
            .Include(p => p.Variants)
            .FirstOrDefaultAsync(p => p.Id == Id);

        if (product != null)
        {
            hasConstructor = await DbContext.ProductConstructors.AnyAsync(c => c.ProductId == Id);

            // Якщо в базі вже є варіації, виберемо першу доступну як дефолтну
            var firstVariant = product.Variants.FirstOrDefault();
            if (firstVariant != null)
            {
                selectedVolume = firstVariant.Size ?? "330";
                selectedColor = firstVariant.Color ?? "white";
            }
        }
    }

    private void SelectVolume(string vol)
    {
        selectedVolume = vol;

        // Перевірка: чи існує такий колір для цього об'єму в базі?
        var variantExists = product?.Variants.Any(v => v.Size == vol && v.Color == selectedColor) ?? false;

        // Якщо для нового об'єму такого кольору немає (наприклад, 440мл + червоний) — скидаємо на білий
        if (!variantExists)
        {
            selectedColor = "white";
        }

        StateHasChanged();
    }

    private void ChangeQuantity(int delta)
    {
        quantity = Math.Max(1, quantity + delta);
    }

    private void AddToCart()
    {
        if (product != null)
        {
            // Формуємо опис для замовлення
            string options = $"Об'єм: {selectedVolume}мл, Колір: {selectedColor}";

            // Передаємо в сервіс ціну, яку знайшли в базі для цієї варіації
            CartService.AddToCart(
                product: product,
                options: options,
                price: CurrentPrice,
                quantity: quantity
            );

            Nav.NavigateTo("/cart");
        }
    }

    private void GoToConstructor() => Nav.NavigateTo($"/constructor/{Id}");
}