
@page "/product/{Id:int}"
@rendermode InteractiveServer
@using GooseShop.Models
@using GooseShop.Data
@using GooseShop.Services
@using Microsoft.EntityFrameworkCore
@inject CartService CartService
@inject NavigationManager Nav
@inject AppDbContext DbContext

<div class="container mt-5 pb-5">
    @if (product == null)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-dark" style="width: 3rem; height: 3rem; border-width: 0.5rem;"></div>
            <p class="fw-black mt-3">ШУКАЄМО ГУСАКА...</p>
        </div>
    }
    else
    {
        @* ХЛІБНІ КРИХТИ *@
        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/" class="z-link-simple">КАТАЛОГ</a></li>
                <li class="breadcrumb-item active fw-bold text-uppercase">@product.Name</li>
            </ol>
        </nav>

        <div class="row g-5">
            @* ЛІВА ЧАСТИНА *@
            <div class="col-lg-6">
                <div class="z-product-viewport shadow-hard">
                    <div class="z-glitch-wrapper">
                        <img src="/@product.ImageUrl" class="z-main-img" alt="@product.Name" />
                        <div class="z-img-overlay"></div>
                    </div>
                    @if (hasConstructor)
                    {
                        <div class="z-badge-3d shadow-pixel">CUSTOM 3D ⚡</div>
                    }
                </div>
            </div>

            @* ПРАВА ЧАСТИНА *@
            <div class="col-lg-6">
                <div class="ps-lg-4">
                    <h1 class="fw-black display-4 text-uppercase mb-1">@product.Name</h1>
                    <div class="z-price-tag shadow-pixel mb-4">@product.BasePrice.ToString("N0") ГРН</div>

                    @* ХАРАКТЕРИСТИКИ *@
                    <div class="z-specs-box shadow-pixel p-4 mb-4">
                        <div class="mb-4">
                            <label class="z-label-spec">ОБ'ЄМ ЧАШКИ:</label>
                            <div class="d-flex gap-2 mt-2">
                                <button class="z-spec-btn @(selectedVolume == "330" ? "active" : "")"
                                        @onclick='() => SelectVolume("330")'>
                                    330 МЛ
                                </button>
                                <button class="z-spec-btn @(selectedVolume == "440" ? "active" : "")"
                                        @onclick='() => SelectVolume("440")'>
                                    440 МЛ
                                </button>
                            </div>
                        </div>

                        <div class="mb-2">
                            <label class="z-label-spec">КОЛІР ОСНОВИ:</label>
                            <div class="d-flex flex-wrap gap-2 mt-2">
                                @foreach (var color in GetAvailableColors())
                                {
                                    <button class="z-color-dot shadow-pixel @(selectedColor == color ? "active" : "")"
                                            style="background-color: @color"
                                            @onclick='() => selectedColor = color'
                                            title="@color"></button>
                                }
                            </div>
                            @if (selectedVolume == "440")
                            {
                                <small class="text-danger fw-bold mt-2 d-block text-uppercase">
                                    * Для 440мл доступний тільки білий хайп
                                </small>
                            }
                        </div>
                    </div>

                    @* ДІЇ *@
                    <div class="z-buy-panel p-4 shadow-pixel mb-4 bg-white">
                        <div class="d-flex align-items-center gap-3 mb-3">
                            <div class="z-qty-selector shadow-pixel">
                                <button @onclick="() => ChangeQuantity(-1)">-</button>
                                <span>@quantity</span>
                                <button @onclick="() => ChangeQuantity(1)">+</button>
                            </div>
                            <div class="fw-black fs-4 ms-auto">РАЗОМ: @((product.BasePrice * quantity).ToString("N0")) ГРН</div>
                        </div>

                        <div class="d-grid gap-3">
                            <button class="z-btn z-btn-cyan shadow-pixel py-3 fs-5" @onclick="AddToCart">
                                В КОШИК 🛒
                            </button>
                            @if (hasConstructor)
                            {
                                <button class="z-btn z-btn-yellow shadow-pixel py-3 fs-5" @onclick="GoToConstructor">
                                    СТВОРИТИ СВІЙ ДИЗАЙН 🎨
                                </button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    [Parameter] public int Id { get; set; }
    private Product? product;
    private int quantity = 1;
    private bool hasConstructor = false;
    private string selectedVolume = "330";
    private string selectedColor = "white";

    private List<string> GetAvailableColors()
    {
        if (selectedVolume == "440") return new List<string> { "white" };
        return new List<string> { "white", "black", "red", "cyan", "yellow" };
    }

    private void SelectVolume(string vol)
    {
        selectedVolume = vol;
        if (vol == "440") selectedColor = "white";
    }

    protected override async Task OnInitializedAsync()
    {
        product = await DbContext.Products
            .Include(p => p.Category)
            .FirstOrDefaultAsync(p => p.Id == Id);

        if (product != null)
        {
            // Перевіряємо наявність конструктора в базі
            hasConstructor = await DbContext.ProductConstructors.AnyAsync(c => c.ProductId == Id);

            // Якщо ви ще не зробили міграцію, можете розкоментувати рядок нижче для тесту:
            // hasConstructor = true;
        }
    }

    private void ChangeQuantity(int delta)
    {
        quantity = Math.Max(1, quantity + delta);
    }

    private void AddToCart()
    {
        if (product != null)
        {
            // ПЕРЕДАЄМО ПУСТИЙ РЯДОК, щоб кошик бачив, що дизайну НЕМАЄ
            CartService.AddToCart(product, string.Empty, null, quantity);
            Nav.NavigateTo("/cart");
        }
    }

    private void GoToConstructor()
    {
        Nav.NavigateTo($"/constructor/{Id}");
    }
}