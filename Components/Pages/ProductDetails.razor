@page "/product/{Id:int}"
@rendermode InteractiveServer
@using GooseShop.Models
@using GooseShop.Data
@using GooseShop.Services
@using Microsoft.EntityFrameworkCore
@inject CartService CartService
@inject NavigationManager Nav
@inject AppDbContext DbContext

<div class="container mt-5 pb-5">
    @if (product == null)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-dark" style="width: 3rem; height: 3rem; border-width: 0.5rem;"></div>
            <p class="fw-black mt-3">ШУКАЄМО ГУСАКА...</p>
        </div>
    }
    else
    {
        @* ХЛІБНІ КРИХТИ *@
        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/" class="z-link-simple">КАТАЛОГ</a></li>
                <li class="breadcrumb-item active fw-bold text-uppercase">@product.Name</li>
            </ol>
        </nav>

        <div class="row g-5">
            @* ЛІВА ЧАСТИНА: ВІЗУАЛ *@
            <div class="col-lg-6">
                <div class="z-product-viewport shadow-hard">
                    <div class="z-glitch-wrapper">
                        <img src="/@product.ImageUrl" class="z-main-img" alt="@product.Name" />
                        <div class="z-img-overlay"></div>
                    </div>
                    @if (hasConstructor)
                    {
                        <div class="z-badge-3d shadow-pixel">CUSTOM 3D ⚡</div>
                    }
                </div>
            </div>

            @* ПРАВА ЧАСТИНА *@
            <div class="col-lg-6">
                <div class="ps-lg-4">
                    <h1 class="fw-black display-4 text-uppercase mb-1">@product.Name</h1>

                    <div class="z-price-tag shadow-pixel mb-4">@CurrentPrice.ToString("N0") ГРН</div>

                    <p class="lead fw-bold text-muted mb-4 border-start border-4 border-dark ps-3">
                        @product.Description
                    </p>

                    @* БЛОК ХАРАКТЕРИСТИК (УНІВЕРСАЛЬНИЙ) *@
                    <div class="z-specs-box shadow-pixel p-4 mb-4">
                        <div class="mb-4">
                            @* Змінюємо назву характеристики залежно від категорії *@
                            <label class="z-label-spec">
                                @(IsCup ? "ОБ'ЄМ ЧАШКИ:" : "ОБЕРИ РОЗМІР:")
                            </label>

                            <div class="d-flex flex-wrap gap-2 mt-2">
                                @if (product.Variants != null)
                                {
                                    @foreach (var size in product.Variants.Select(v => v.Size).Distinct())
                                    {
                                        <button class="z-spec-btn @(selectedSize == size ? "active" : "")"
                                                @onclick='() => SelectSize(size)'>
                                            @* Для чашок додаємо МЛ, для футболок просто виводимо S, M, L... *@
                                            @size @(IsCup ? "МЛ" : "")
                                        </button>
                                    }
                                }
                            </div>
                        </div>

                        <div class="mb-2">
                            <label class="z-label-spec">КОЛІР:</label>
                            <div class="d-flex flex-wrap gap-2 mt-2">
                                @foreach (var color in AllAvailableColors)
                                {
                                    bool isAvailable = product.Variants.Any(v => v.Size == selectedSize && v.Color == color);

                                    <button class="z-color-dot shadow-pixel @(selectedColor == color ? "active" : "") @(!isAvailable ? "disabled-dot" : "")"
                                            style="background-color: @color"
                                            @onclick='() => { if (isAvailable) selectedColor = color; }'
                                            disabled="@(!isAvailable)"
                                            title="@(isAvailable? color : "Немає в наявності")">
                                    </button>
                                }
                            </div>
                            @if (IsCup && selectedSize == "440")
                            {
                                <small class="z-danger-text fw-bold mt-2 d-block text-uppercase">
                                    * ВЕЛИКИЙ ГУСЬ ЛЮБИТЬ ТІЛЬКИ БІЛИЙ КОЛІР
                                </small>
                            }
                        </div>
                    </div>

                    @* КУПІВЛЯ *@
                    <div class="z-buy-panel p-4 shadow-pixel mb-4 bg-white">
                        <div class="d-flex align-items-center justify-content-between mb-4 flex-wrap gap-3">
                            <div class="z-qty-selector shadow-pixel">
                                <button @onclick="() => ChangeQuantity(-1)">-</button>
                                <span class="fw-black">@quantity</span>
                                <button @onclick="() => ChangeQuantity(1)">+</button>
                            </div>
                            <div class="fw-black fs-3">РАЗОМ: @((CurrentPrice * quantity).ToString("N0")) ГРН</div>
                        </div>

                        <div class="d-grid gap-3">
                            <button class="z-btn z-btn-cyan shadow-pixel py-3 fs-5" @onclick="AddToCart">
                                В КОШИК 🛒
                            </button>
                            @if (hasConstructor)
                            {
                                <button class="z-btn z-btn-yellow shadow-pixel py-3 fs-5" @onclick="GoToConstructor">
                                    СТВОРИТИ СВІЙ ДИЗАЙН 🎨
                                </button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    [Parameter] public int Id { get; set; }
    private Product? product;
    private int quantity = 1;
    private bool hasConstructor = false;

    private string selectedSize = "";
    private string selectedColor = "white";

    private readonly string[] AllAvailableColors = { "white", "black", "red", "cyan", "yellow" };

    // Використовуємо StringComparison для надійності
    private bool IsCup => product?.Category?.Name?.Contains("Чашки", StringComparison.OrdinalIgnoreCase) ?? false;

    private ProductVariant? CurrentVariant => product?.Variants?
        .FirstOrDefault(v => v.Size == selectedSize && v.Color == selectedColor);

    private decimal CurrentPrice => CurrentVariant?.Price ?? (product?.BasePrice ?? 0);

    protected override async Task OnParametersSetAsync()
    {
        // Використовуємо OnParametersSetAsync, щоб при переході між товарами дані оновлювались
        product = await DbContext.Products
            .Include(p => p.Category)
            .Include(p => p.Variants)
            .FirstOrDefaultAsync(p => p.Id == Id);

        if (product != null)
        {
            hasConstructor = await DbContext.ProductConstructors.AnyAsync(c => c.ProductId == Id);

            // Якщо selectedSize ще порожній, ініціалізуємо його першим доступним варіантом
            if (string.IsNullOrEmpty(selectedSize) || !product.Variants.Any(v => v.Size == selectedSize))
            {
                var defaultVariant = product.Variants.FirstOrDefault();
                if (defaultVariant != null)
                {
                    selectedSize = defaultVariant.Size;
                    selectedColor = defaultVariant.Color;
                }
            }
        }
    }

    private void SelectSize(string size)
    {
        selectedSize = size;

        // Перевірка: чи є поточний колір у новому розмірі
        var match = product?.Variants.FirstOrDefault(v => v.Size == size && v.Color == selectedColor);

        if (match == null)
        {
            // Якщо кольору нема, автоматично обираємо перший доступний для цього розміру
            var firstAvailable = product?.Variants.FirstOrDefault(v => v.Size == size);
            if (firstAvailable != null)
            {
                selectedColor = firstAvailable.Color;
            }
        }
        StateHasChanged();
    }

    private void ChangeQuantity(int delta) => quantity = Math.Max(1, quantity + delta);

    private void AddToCart()
    {
        if (product != null && !string.IsNullOrEmpty(selectedSize))
        {
            string label = IsCup ? "Об'єм" : "Розмір";
            string suffix = IsCup ? "мл" : "";
            string options = $"{label}: {selectedSize}{suffix}, Колір: {selectedColor}";

            CartService.AddToCart(product, options, CurrentPrice, quantity);
            Nav.NavigateTo("/cart");
        }
    }

    private void GoToConstructor() => Nav.NavigateTo($"/constructor/{Id}");
}