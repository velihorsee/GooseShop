@page "/admin/login"
@using GooseShop.Services
@inject AdminService AdminService
@inject NavigationManager Nav

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card shadow border-0 p-4">
                <div class="text-center mb-3">
                    @* Використовуємо іконку щита для адміна *@
                    <div class="display-4 text-primary"><i class="bi bi-shield-lock"></i></div>
                    <h3 class="mt-2">Вхід для власника 🦢</h3>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Пароль доступу:</label>
                    <input type="password"
                           @bind="password"
                           @bind:event="oninput"
                           @onkeyup="HandleKeyUp"
                           class="form-control form-control-lg"
                           placeholder="Введіть пароль..."
                           autofocus />
                </div>

                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert alert-danger p-2 small text-center animate-fade-in">
                        <i class="bi bi-exclamation-triangle-fill me-1"></i> @errorMessage
                    </div>
                }

                <button class="btn btn-primary btn-lg w-100 fw-bold" @onclick="HandleLogin">
                    Увійти
                </button>
            </div>

            <div class="text-center mt-3">
                <a href="/" class="text-muted small text-decoration-none">
                    <i class="bi bi-arrow-left"></i> Повернутися на головну
                </a>
            </div>
        </div>
    </div>
</div>

@code {
    private string password = "";
    private string errorMessage = "";

    private void HandleLogin()
    {
        if (AdminService.Login(password))
        {
            Nav.NavigateTo("/admin/orders");
        }
        else
        {
            errorMessage = "Невірний пароль! Спробуйте ще раз.";
            password = "";
        }
    }

    private void HandleKeyUp(KeyboardEventArgs e)
    {
        // Очищаємо помилку, коли користувач починає вводити заново
        if (!string.IsNullOrEmpty(errorMessage)) errorMessage = "";

        if (e.Key == "Enter")
        {
            HandleLogin();
        }
    }
}