@page "/profile"
@using Microsoft.EntityFrameworkCore
@using GooseShop.Models
@using GooseShop.Data
@using GooseShop.Services
@inject AuthService AuthService
@inject IDbContextFactory<AppDbContext> DbFactory
@inject NavigationManager Nav

<div class="container mt-5 pb-5">
    @if (!AuthService.IsLoggedIn)
    {
        <div class="z-alert shadow-pixel mb-5">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            ЕЙ, ГУСАЧЕ! <a href="/login" class="text-white fw-black text-decoration-underline">УВІЙДИ</a>, ЩОБ БАЧИТИ СВІЙ ШМОТ.
        </div>
    }
    else
    {
        <h2 class="fw-black display-4 text-uppercase mb-5 mt-4">
            ТВІЙ <span class="z-highlight px-3 shadow-pixel">КАБІНЕТ</span>
        </h2>

        <div class="row g-5">
            @* ЛІВА ПАНЕЛЬ: Картка юзера *@
            <div class="col-xl-4">
                <div class="z-profile-card shadow-pixel p-4 text-center">
                    <div class="z-avatar-box shadow-pixel mb-3 mx-auto">
                        <i class="bi bi-person-bounding-box"></i>
                    </div>
                    <h3 class="fw-black text-uppercase m-0">@AuthService.CurrentUser.FullName</h3>
                    <p class="z-label text-muted">@AuthService.CurrentUser.Email</p>

                    <div class="d-flex flex-column gap-2 mt-4">
                        <button class="z-nav-pill-3d @(activeTab == "orders" ? "active-z" : "")" @onclick='() => activeTab = "orders"'>
                            ЗАМОВЛЕННЯ 📦
                        </button>
                        <button class="z-nav-pill-3d @(activeTab == "settings" ? "active-z" : "")" @onclick='() => activeTab = "settings"'>
                            НАЛАШТУВАННЯ ⚙️
                        </button>
                    </div>

                    @* Кнопка ВИЙТИ *@
                    <button class="z-btn z-btn-red w-100 mt-5 shadow-pixel" @onclick="Logout">
                        ВИЙТИ <i class="bi bi-box-arrow-left ms-1"></i>
                    </button>
                </div>
            </div>

            @* ПРАВА ПАНЕЛЬ: Контент *@
            <div class="col-xl-8">
                <div class="z-content-card shadow-pixel p-4 p-md-5">
                    @if (activeTab == "orders")
                    {
                        <h4 class="fw-black text-uppercase mb-4">Історія твоїх дропів</h4>
                        @if (userOrders == null)
                        {
                            <div class="text-center py-5">
                                <div class="spinner-border text-dark" style="width: 3rem; height: 3rem; border-width: 0.5rem;"></div>
                            </div>
                        }
                        else if (!userOrders.Any())
                        {
                            <div class="text-center py-5 border-dashed">
                                <i class="bi bi-bag-x display-1 opacity-25"></i>
                                <p class="mt-3 fw-bold">Тут порожньо, як в холодильнику гусака.</p>
                                <a href="/" class="z-btn z-btn-cyan text-decoration-none py-3 px-5">ДО КАТАЛОГУ 🔥</a>
                            </div>
                        }
                        else
                        {
                            <div class="list-group gap-3">
                                @foreach (var order in userOrders)
                                {
                                    <div class="z-order-item shadow-pixel p-3">
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            @* ТУТ МИ ВИПРАВИЛИ СТАТУСИ *@
                                            <div>
                                                <span class="z-order-id">№@order.Id</span>
                                                <span class="z-status-badge @(order.Status == "Виконано" ? "status-ok" : "status-wait")">
                                                    @order.Status.ToUpper()
                                                </span>
                                            </div>
                                            <span class="fw-black fs-5">@order.TotalAmount.ToString("N0") ГРН</span>
                                        </div>
                                        <div class="d-flex flex-wrap gap-3 small fw-bold opacity-75 mt-3">
                                            @* ТУТ МИ ЗАМІНИЛИ OrderDate НА CreatedAt *@
                                            <span><i class="bi bi-calendar3 me-1"></i> @order.CreatedAt.ToShortDateString()</span>
                                            <span><i class="bi bi-geo-alt-fill me-1"></i> @order.ShippingAddress</span>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                    }
                    else if (activeTab == "settings")
                    {
                        <h4 class="fw-black text-uppercase mb-4">Налаштування шпигуна</h4>
                        <div class="row g-4">
                            <div class="col-12">
                                <label class="z-label-input">ІМ'Я ТА ПРІЗВИЩЕ</label>
                                <input type="text" @bind="editUser.FullName" class="z-input-pixel" />
                            </div>
                            <div class="col-12">
                                <label class="z-label-input">ПОШТА (LOGIN)</label>
                                <input type="email" value="@editUser.Email" class="z-input-pixel opacity-50" disabled />
                            </div>
                            <div class="col-12">
                                <label class="z-label-input">НОВИЙ ПАРОЛЬ</label>
                                <input type="password" @bind="editUser.Password" class="z-input-pixel" placeholder="НЕ КАЖИ НІКОМУ..." />
                            </div>

                            @if (!string.IsNullOrEmpty(statusMessage))
                            {
                                <div class="col-12">
                                    <div class="z-status-ok shadow-pixel p-2 text-center fw-black">@statusMessage</div>
                                </div>
                            }

                            <div class="col-12 mt-4">
                                @* Кнопка ЗБЕРЕГТИ *@
                                <button class="z-btn z-btn-green w-100 shadow-pixel py-3" @onclick="UpdateProfile">
                                    ЗБЕРЕГТИ ВСЕ <i class="bi bi-check-lg ms-1"></i>
                                </button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>

@code {
    // Код залишається твоїм, Валерію, він працює чітко!
    private List<Order>? userOrders;
    private string activeTab = "orders";
    private User editUser = new();
    private string statusMessage = "";

    protected override async Task OnInitializedAsync()
    {
        if (AuthService.IsLoggedIn)
        {
            using var context = DbFactory.CreateDbContext();

            // Змінюємо OrderDate на CreatedAt для сортування
            userOrders = await context.Orders
                .Where(o => o.Email == AuthService.CurrentUser.Email)
                .OrderByDescending(o => o.CreatedAt)
                .ToListAsync();

            editUser = new User
            {
                Id = AuthService.CurrentUser.Id,
                FullName = AuthService.CurrentUser.FullName,
                Email = AuthService.CurrentUser.Email,
                Password = AuthService.CurrentUser.Password,
                Role = AuthService.CurrentUser.Role
            };
        }
    }

    private async Task UpdateProfile()
    {
        if (string.IsNullOrWhiteSpace(editUser.FullName)) return;
        using var context = DbFactory.CreateDbContext();
        var userInDb = await context.Users.FindAsync(editUser.Id);

        if (userInDb != null)
        {
            userInDb.FullName = editUser.FullName;
            if (!string.IsNullOrEmpty(editUser.Password) && editUser.Password != AuthService.CurrentUser.Password)
            {
                userInDb.Password = BCrypt.Net.BCrypt.HashPassword(editUser.Password);
            }
            await context.SaveChangesAsync();
            AuthService.CurrentUser.FullName = userInDb.FullName;
            AuthService.CurrentUser.Password = userInDb.Password;
            statusMessage = "ОНОВЛЕНО! ✅";
            StateHasChanged();
        }
    }

    private void Logout()
    {
        AuthService.Logout();
        Nav.NavigateTo("/");
    }
}