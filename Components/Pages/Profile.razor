@page "/profile"
@using Microsoft.EntityFrameworkCore
@using GooseShop.Models
@using GooseShop.Data
@using GooseShop.Services
@inject AuthService AuthService
@inject IDbContextFactory<AppDbContext> DbFactory
@inject NavigationManager Nav

<div class="container mt-5">
    @if (!AuthService.IsLoggedIn)
    {
        <div class="alert alert-warning shadow-sm">
            <i class="bi bi-exclamation-triangle me-2"></i>
            Будь ласка, <a href="/login" class="alert-link">увійдіть</a>, щоб бачити замовлення та керувати профілем.
        </div>
    }
    else
    {
        <div class="row">
            @* ЛІВА ПАНЕЛЬ: Навігація та статус *@
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm border-0 p-4 text-center">
                    <div class="display-4 text-primary mb-3">
                        <i class="bi bi-person-badge"></i>
                    </div>
                    <h4>@AuthService.CurrentUser.FullName</h4>
                    <p class="text-muted small">@AuthService.CurrentUser.Email</p>
                    <hr />
                    <div class="nav flex-column nav-pills" role="tablist">
                        <button class="nav-link @(activeTab == "orders" ? "active" : "") mb-2" @onclick='() => activeTab = "orders"'>
                            <i class="bi bi-cart-check me-2"></i> Мої замовлення
                        </button>
                        <button class="nav-link @(activeTab == "settings" ? "active" : "") mb-2" @onclick='() => activeTab = "settings"'>
                            <i class="bi bi-gear me-2"></i> Налаштування
                        </button>
                    </div>
                    <button class="btn btn-outline-danger btn-sm mt-4" @onclick="Logout">
                        <i class="bi bi-box-arrow-left me-1"></i> Вийти
                    </button>
                </div>
            </div>

            @* ПРАВА ПАНЕЛЬ: Контент *@
            <div class="col-md-8">
                <div class="card shadow-sm border-0 p-4">
                    @if (activeTab == "orders")
                    {
                        <h4 class="mb-4">Історія замовлень</h4>
                        @if (userOrders == null)
                        {
                            <div class="text-center py-4">
                                <div class="spinner-border text-primary" role="status"></div>
                                <p class="mt-2 text-muted">Завантаження...</p>
                            </div>
                        }
                        else if (!userOrders.Any())
                        {
                            <div class="text-center py-5 border rounded bg-light">
                                <i class="bi bi-bag-x display-1 text-muted"></i>
                                <p class="mt-3">Ви ще не робили замовлень.</p>
                                <a href="/" class="btn btn-primary btn-sm">До каталогу</a>
                            </div>
                        }
                        else
                        {
                            <div class="list-group">
                                @foreach (var order in userOrders)
                                {
                                    <div class="list-group-item list-group-item-action mb-2 rounded border shadow-sm">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <span class="fw-bold text-primary">№@order.Id</span>
                                                <span class="badge @(order.IsCompleted ? "bg-success" : "bg-warning text-dark") ms-2">
                                                    @(order.IsCompleted ? "Виконано" : "В обробці")
                                                </span>
                                            </div>
                                            <span class="fw-bold text-dark">@order.TotalAmount.ToString("N0") грн</span>
                                        </div>
                                        <div class="d-flex justify-content-between mt-2 small text-muted">
                                            <span><i class="bi bi-calendar3 me-1"></i> @order.OrderDate.ToShortDateString()</span>
                                            <span><i class="bi bi-geo-alt me-1"></i> @order.ShippingAddress</span>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                    }
                    else if (activeTab == "settings")
                    {
                        <h4 class="mb-4">Редагування профілю</h4>
                        <div class="row g-3">
                            <div class="col-12">
                                <label class="form-label fw-bold">ПІБ (Повне ім'я)</label>
                                <input type="text" @bind="editUser.FullName" class="form-control" />
                            </div>
                            <div class="col-12">
                                <label class="form-label fw-bold">Email (Логін)</label>
                                <input type="email" value="@editUser.Email" class="form-control bg-light" disabled />
                                <div class="form-text">Зміна пошти недоступна.</div>
                            </div>
                            <div class="col-12">
                                <label class="form-label fw-bold">Новий пароль</label>
                                <input type="password" @bind="editUser.Password" class="form-control" placeholder="Залиште порожнім, щоб не змінювати" />
                            </div>

                            @if (!string.IsNullOrEmpty(statusMessage))
                            {
                                <div class="col-12">
                                    <div class="alert alert-success py-2 small text-center">@statusMessage</div>
                                </div>
                            }

                            <div class="col-12 pt-2">
                                <button class="btn btn-primary w-100 fw-bold" @onclick="UpdateProfile">
                                    <i class="bi bi-save me-1"></i> Зберегти зміни
                                </button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>

@code {
    private List<Order>? userOrders;
    private string activeTab = "orders";
    private User editUser = new();
    private string statusMessage = "";

    protected override async Task OnInitializedAsync()
    {
        if (AuthService.IsLoggedIn)
        {
            // Завантаження замовлень
            using var context = DbFactory.CreateDbContext();
            userOrders = await context.Orders
                .Where(o => o.Email == AuthService.CurrentUser.Email)
                .OrderByDescending(o => o.OrderDate)
                .ToListAsync();

            // Підготовка даних для редагування
            editUser = new User
            {
                Id = AuthService.CurrentUser.Id,
                FullName = AuthService.CurrentUser.FullName,
                Email = AuthService.CurrentUser.Email,
                Password = AuthService.CurrentUser.Password,
                Role = AuthService.CurrentUser.Role
            };
        }
    }

    private async Task UpdateProfile()
    {
        if (string.IsNullOrWhiteSpace(editUser.FullName)) return;

        using var context = DbFactory.CreateDbContext();
        var userInDb = await context.Users.FindAsync(editUser.Id);

        if (userInDb != null)
        {
            userInDb.FullName = editUser.FullName;

            // Хешуємо пароль, якщо він був змінений (не такий, як у базі)
            if (!string.IsNullOrEmpty(editUser.Password) && editUser.Password != AuthService.CurrentUser.Password)
            {
                userInDb.Password = BCrypt.Net.BCrypt.HashPassword(editUser.Password);
            }

            await context.SaveChangesAsync();

            // Оновлюємо локальні дані
            AuthService.CurrentUser.FullName = userInDb.FullName;
            AuthService.CurrentUser.Password = userInDb.Password;

            statusMessage = "Дані успішно оновлено! ✅";
            StateHasChanged();
        }
    }

    private void Logout()
    {
        AuthService.Logout();
        Nav.NavigateTo("/");
    }
}