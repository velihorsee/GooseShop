@page "/admin/settings"
@using GooseShop.Data
@using GooseShop.Services
@using GooseShop.Models
@using Microsoft.EntityFrameworkCore
@inject NovaPoshtaService NP
@inject AppDbContext DbContext
@inject NavigationManager Nav

@* Оновлений заголовок *@

<div class="d-flex align-items-center mb-4 mt-2">
    <button class="z-btn-menu shadow-pixel me-3" @onclick='() => Nav.NavigateTo("/admin")' style="padding: 5px 15px;">
        <i class="bi bi-arrow-left"></i>
    </button>
    <h3 class="fw-black text-uppercase m-0">НАЛАШТУВАННЯ <span class="z-highlight px-2 shadow-pixel">МАГАЗИНУ</span></h3>
</div>

@* Оновлена картка *@
<div class="z-content-card shadow-pixel p-4 p-md-5 bg-white">
    <h5 class="fw-black text-uppercase mb-3">СИНХРОНІЗАЦІЯ З НОВОЮ ПОШТОЮ 🚚</h5>
    
    <div class="z-alert shadow-pixel mb-4" style="background: #f8f9fa; color: #000; border: 3px solid #000;">
        <i class="bi bi-clock-history me-2"></i>
        ОСТАННЄ ОНОВЛЕННЯ: <strong class="text-danger">@lastUpdate</strong>
    </div>

    @if (isUpdating)
    {
        <div class="z-status-ok shadow-pixel p-3 mb-4 bg-cyan" style="background: var(--z-cyan) !important;">
            <div class="d-flex align-items-center">
                <div class="spinner-border spinner-border-sm me-3" role="status"></div>
                <div class="fw-black text-uppercase">ОБРОБЛЕНО: @processedCount ЗАПИСІВ...</div>
            </div>
        </div>
    }

    @* Наша фірмова кнопка *@
    <button class="z-btn z-btn-green w-100 shadow-pixel py-3" @onclick="SyncWarehouses" disabled="@isUpdating">
        @if (isUpdating)
        {
            <span class="spinner-border spinner-border-sm me-2"></span>
            <span>ЗАЧЕКАЙ...</span>
        }
        else
        {
            <i class="bi bi-arrow-repeat me-2"></i>
            <span>ОНОВИТИ БАЗУ ВІДДІЛЕНЬ</span>
        }
    </button>
</div>



@code {
    private string lastUpdate = "Ніколи";
    private bool isUpdating = false;
    private int processedCount = 0;

    protected override async Task OnInitializedAsync()
    {
        // Microsoft.EntityFrameworkCore дозволяє використовувати FirstOrDefaultAsync
        var config = await DbContext.AppConfigs.FirstOrDefaultAsync(c => c.Key == "NP_LastUpdate");
        lastUpdate = config?.Value ?? "Ніколи";
    }

    private async Task SyncWarehouses()
    {
        isUpdating = true;
        processedCount = 0;
        StateHasChanged();

        try
        {
            // 1. Отримуємо ВСІ відділення через API
            var allWarehouses = await NP.GetAllWarehouses();

            if (allWarehouses != null && allWarehouses.Any())
            {
                // 2. Очищаємо стару базу
                // Використовуємо ExecuteDeleteAsync для миттєвого очищення великої таблиці (EF Core 7+)
                await DbContext.CachedWarehouses.ExecuteDeleteAsync();

                // 3. Додаємо нові
                foreach (var wh in allWarehouses)
                {
                    DbContext.CachedWarehouses.Add(new CachedWarehouse
                    {
                        CityRef = wh.CityRef,
                        Ref = wh.Ref,
                        Description = wh.Description,
                        // Логіка визначення типу
                        Type = wh.Description.Contains("Поштомат", StringComparison.OrdinalIgnoreCase)
                               ? "Postomat" : "Warehouse"
                    });

                    processedCount++;

                    // Зберігаємо пачками по 1000 для стабільності пам'яті
                    if (processedCount % 1000 == 0)
                    {
                        await DbContext.SaveChangesAsync();
                        StateHasChanged(); // Оновлюємо лічильник на екрані
                    }
                }

                await DbContext.SaveChangesAsync();

                // 4. Оновлюємо дату оновлення
                var config = await DbContext.AppConfigs.FirstOrDefaultAsync(c => c.Key == "NP_LastUpdate")
                             ?? new AppConfig { Key = "NP_LastUpdate" };

                config.Value = DateTime.Now.ToString("dd.MM.yyyy HH:mm");

                if (config.Id == 0) DbContext.AppConfigs.Add(config);
                await DbContext.SaveChangesAsync();

                lastUpdate = config.Value;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Помилка синхронізації: {ex.Message}");
        }
        finally
        {
            isUpdating = false;
            StateHasChanged();
        }
    }
}