    <script>
        // 1. Відкриття/Закриття бокового меню
        window.toggleSidebar = () => {
            const sidebar = document.getElementById("sidebarMenu");
            if (sidebar) sidebar.classList.toggle("active");
        };

        // 2. Плавний скрол до каталогу
        window.scrollToElement = (elementId) => {
            const element = document.getElementById(elementId);
            if (element) {
                element.scrollIntoView({ behavior: 'smooth' });
            }
        };

                window.initGooseRain = () => {
            const banner = document.querySelector('.z-hero-card');
            if (!banner) return;

            // Глобальні змінні для миші, щоб не спамити лісенерами
            let mX = 0;
            let mY = 0;
            window.addEventListener('mousemove', (e) => {
                const rect = banner.getBoundingClientRect();
                mX = e.clientX - rect.left;
                mY = e.clientY - rect.top;
            });

            function createFallingGoose() {
                const goose = document.createElement('div');
                goose.className = 'falling-goose';
                goose.innerHTML = '🦢';

                let curX = Math.random() * banner.offsetWidth;
                let curY = -50;
                let speedY = 0.8 + Math.random() * 1.0; // Повільніше, щоб встигнути "відгодувати"
                let scale = 1.0;
                let targetOffsetX = 0;
                let targetOffsetY = 0;

                goose.style.left = curX + 'px';
                banner.appendChild(goose);

                const update = () => {
                    // Дистанція до миші
                    const dx = (curX + targetOffsetX) - mX;
                    const dy = (curY + targetOffsetY) - mY;
                    const dist = Math.sqrt(dx * dx + dy * dy);

                    if (dist < 180) { // Радіус впливу
                        const angle = Math.atan2(dy, dx);
                        const force = (180 - dist) / 180;

                        // Гусак тікає
                        targetOffsetX += Math.cos(angle) * 12 * force;
                        targetOffsetY += Math.sin(angle) * 12 * force;

                        // ГУСАК РОСТЕ!
                        scale += 0.03;
                        if (scale > 6) scale = 6; // Максимальний розмір
                    }

                    curY += speedY;
                    targetOffsetX *= 0.92;
                    targetOffsetY *= 0.92;

                    // Ефект "люті": чим більший гусак, тим червоніший
                    // filter: hue-rotate змінює колір емодзі
                    const anger = Math.min((scale - 1) * 40, 150);

                    goose.style.transform = `translate(${targetOffsetX}px, ${targetOffsetY}px) scale(${scale})`;
                    goose.style.top = curY + 'px';
                    goose.style.filter = `hue-rotate(-${anger}deg) drop-shadow(0 0 ${scale * 2}px rgba(255,0,0,0.5))`;

                    if (curY < banner.offsetHeight + 100) {
                        requestAnimationFrame(update);
                    } else {
                        goose.remove();
                    }
                };

                requestAnimationFrame(update);
            }

            setInterval(createFallingGoose, 1800);
        };

        // 4. РОЗУМНИЙ ГУСАК-ГЕРОЙ (Тікає і повертається на місце)
            window.initSmartGoose = (elementId) => {
        const goose = document.getElementById(elementId);
        if (!goose) return;

        let currentX = 0, currentY = 0;
        let targetX = 0, targetY = 0;
        let isScared = false;

        document.addEventListener('mousemove', (e) => {
            const rect = goose.getBoundingClientRect();
            const centerX = rect.left + rect.width / 2;
            const centerY = rect.top + rect.height / 2;

            const distX = e.clientX - centerX;
            const distY = e.clientY - centerY;
            const distance = Math.sqrt(distX * distX + distY * distY);

            // Збільшуємо радіус, але робимо втечу плавною
            if (distance < 200) {
                isScared = true;
                const angle = Math.atan2(distY, distX);
                // Гусак тікає ВІД мишки
                targetX = -Math.cos(angle) * 150;
                targetY = -Math.sin(angle) * 150;
            } else {
                isScared = false;
                targetX = 0;
                targetY = 0;
            }
        });
                function animate() {
                // РІШЕННЯ ТРЯСКИ: Дуже плавне прямування до цілі (0.05 замість 0.15)
                const lerp = isScared ? 0.08 : 0.03;
                currentX += (targetX - currentX) * lerp;
                currentY += (targetY - currentY) * lerp;

                goose.style.transform = `translate(${currentX}px, ${currentY}px)`;
                requestAnimationFrame(animate);
            }
            animate();
        };
    </script>
